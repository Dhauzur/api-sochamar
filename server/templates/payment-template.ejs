<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            table-layout: fixed;
            width: 100%;
        }
        .longStringBreak {
            word-wrap: break-word;
            /* Just to keep text selection hightlight inside the table: */
            overflow: hidden;
        }
        table, th, td {
            border: 1px solid black;
            overflow:hidden;
        }
        tr { page-break-inside: avoid; page-break-after: auto; }
    </style>
</head>
<body>
<div>
    <div>
        <h3>Reporte de Pagos</h3>
        <table>
            <tr>
                <th>Fecha de inicio</th>
                <th>Fecha de fin</th>
                <th>Comentarios</th>
                <th>Monto</th>
            </tr>
            <% if (payments.length > 0) { %>
                <% payments.forEach(payment => {%>
                    <tr>
                        <td><%= payment.startDate %></td>
                        <td><%= payment.endDate %></td>
                        <td class="longStringBreak">
                            <%= payment.comments %>
                        </td>
                        <td><%= payment.mount %></td>
                    </tr>
                <%  });%>
            <% }%>
        </table>
    </div>
</div>
</body>
</html>
