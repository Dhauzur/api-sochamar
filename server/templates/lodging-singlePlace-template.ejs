    <!DOCTYPE html>
    <html>
    <head>
        <style>
            table {
                border-collapse: collapse;
                table-layout: fixed;
                width: 100%;
            }
            .longStringBreak {
                word-wrap: break-word;
                border: 1px solid blue;
                /* Just to keep text selection hightlight inside the table: */
                overflow: hidden;
            }
            table, th, td {
                border: 1px solid black;
                overflow:hidden;
            }
        </style>
    </head>
    <body>
    <div>
        <div>
            <h3>Reporte de Hospedajes</h3>
            <table>
                <h3><%= placeName %></h3>
                <tr>
                    <th>Fecha inicio</th>
                    <th>Fecha fin</th>
                    <th>Monto total</th>
                    <th>Lugar</th>
                </tr>
                <% if (lodgings.length > 0) { %>
                    <% lodgings.forEach(lodging => {%>
                        <tr>
                            <td><%= lodging.start %></td>
                            <td><%= lodging.end %></td>
                            <td><%= lodging.mountTotal %></td>
                            <td><%= placeName %></td>
                        </tr>
                    <%  });%>
                <% }%>
            </table>
        </div>
    </div>
    </body>
    </html>
